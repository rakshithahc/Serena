<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
     android:id="@+id/listitem_app"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tabid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tableid"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <TextView
        android:id="@+id/projtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/projectId"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <com.serena.autofit.AutofitTextView
        android:id="@+id/apprItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/mtext"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.serena.autofit.AutofitTextView
            android:id="@+id/owner_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="@string/owner"
            android:textColor="@android:color/black" />

        <com.serena.autofit.AutofitTextView
            android:id="@+id/state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textColor="#ff9933"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <com.serena.autofit.AutofitTextView
            android:id="@+id/dispId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="25dp"
            android:text="@string/s"
            android:textColor="@android:color/black" />

        <com.serena.autofit.AutofitTextView
            android:id="@+id/date_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:paddingLeft="25dp"
            android:text="@string/dot"
            android:textColor="#a9a9a9"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.serena.autofit.AutofitTextView
        android:id="@+id/req_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/req_id"
        android:textColor="@android:color/black"
        android:visibility="gone" />

</LinearLayout>