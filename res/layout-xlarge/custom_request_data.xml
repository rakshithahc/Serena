<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_req"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/req_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:text="@string/req_id"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tableid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tableid"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <com.serena.autofit.AutofitTextView
        android:id="@+id/titleReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/mtext"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.serena.autofit.AutofitTextView
            android:id="@+id/owner_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="@string/owner"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <com.serena.autofit.AutofitTextView
            android:id="@+id/state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="right"
            android:text="@string/state"
            android:textColor="#ff9933"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_marginTop="3dp" >

        <com.serena.autofit.AutofitTextView
            android:id="@+id/dispId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="25dp"
            android:text="@string/projectId"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <com.serena.autofit.AutofitTextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/ojh"
            android:textColor="#a9a9a9"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:contentDescription="@string/_0"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:src="@drawable/refreshicon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/projectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stext"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

</LinearLayout>